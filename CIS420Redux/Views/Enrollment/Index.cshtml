@model IEnumerable<CIS420Redux.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<div class="panel" style="margin-top: 15px;">
    <div class="panel-heading" style="background-color:rgb(227, 27, 35); text-align: center;">
        <h3>Grades</h3>
    </div>
</div>

<p>
    <button class="btn btn-danger col-md-2 pull-left" onclick="location.href='@Url.Action("Create", "Enrollment")'">Create New</button>
</p>
<table class="table table-bordered table-responsive table-hover" style="color: #000000">
    <tr>
        <th style="color: black;">
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        <th style="color: black;">
            @Html.DisplayNameFor(model => model.Program.Name)
        </th>
        <th style="color: black;">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </th>
        <th style="color: black;">
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="color: black;">
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td style="color: black;">
                @Html.DisplayFor(modelItem => item.Program.Name)
            </td>
            <td style="color: black;">
                @Html.DisplayFor(modelItem => item.Student.LastName)
            </td>
            <td style="color: black;">
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
