@model CIS420Redux.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="container">
    <div class="wrapper">
        <form action="" method="post" name="Login_Form" class="form-signin">
            <h3 class="form-signin-heading">Register a New Account!</h3>
            <hr class="colorgraph">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
            <!-- Form Name -->
                <div class="panel-primary">
                    <div class="" style="background-color: red;">
                    </div>
                    <div class="panel-body alignment">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <!--@Html.LabelFor(m => m.FirstName, new { @class = "col-sm-3 control-label" })-->
                            <div class="col-sm-15">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" , @placeholder="First Name"})
                            </div>
                        </div>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <!--@Html.LabelFor(m => m.LastName, new { @class = "col-sm-3 control-label" })-->
                            <div class="col-sm-15">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder="Last Name" })
                            </div>
                        </div>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <!--@Html.LabelFor(m => m.Role, new { @class = "col-sm-3 control-label" })-->
                            <div class="col-sm-15">
                                @Html.TextBoxFor(m => m.Role, new { @class = "form-control", @placeholder="Role" })
                            </div>
                        </div>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <!--@Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })-->
                            <div class="col-sm-15">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" , @placeholder="Email" })
                            </div>
                        </div>
                        <div class="form-group">
                            <!--@Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })-->
                            <div class="col-sm-15">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder="Password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <!--@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label" })-->
                            <div class="col-sm-15">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" , @placeholder="Confirm Password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 text-center">
                                <input type="submit" class="btn btn-default" value="Register" />
                            </div>
                        </div>
                    </div>
                </div>

            }
        </form>
    </div>

</div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
