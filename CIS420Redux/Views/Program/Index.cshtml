@model IEnumerable<CIS420Redux.Models.Program>

@{
    ViewBag.Title = "Index";
}

<div class="panel" style="margin-top: 15px;">
    <div class="panel-heading" style="background-color: rgb(227, 27, 35); text-align: center;">
        <h3>Programs</h3>
    </div>
</div>

<p>
    <button class="btn btn-danger col-md-2 pull-left" onclick="location.href='@Url.Action("Create", "Program")'">Create New</button>
</p>
<table class="table table-bordered table-responsive table-hover" style="color: #000000;">
    <tr style="color: #000000; text-decoration: underline;">
        <th>
            ID
        </th>
        <th>
          Program Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="color: #000000">
            <td>
               @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
