@model CIS420Redux.Models.POS

@{
    ViewBag.Title = "Create";
}

<div class="panel" style="margin-top: 15px;">
    <div class="panel-heading" style="background-color: rgb(227, 27, 35); text-align: center;">
        <h3>Create a Program of Study</h3>
    </div>
</div>
<p style="margin-left: 1%">
    <button class="btn btn-danger col-md-2 pull-left" onclick="location.href='@Url.Action("Index", "POS")'">Back To List</button>
</p>
<div class="container">
    <div class="wrapper">
        <form action="" method="post" name="Login_Form" class="form-signin">
            <h3 class="form-signin-heading" style="color: rgb(227, 27, 35)">New Program of Study</h3>
            <hr class="colorgraph" style="background: rgb(227, 27, 35)" )"><br>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.StudentId, "Last Name", htmlAttributes: new { @class = "control-label col-md-2" })*@ <label style="color: black;">Student Last Name:</label>
                        <div class="col-md-15">
                            @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-10">
                            <input type="submit" value="Create" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
            }
            </form>
        </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }