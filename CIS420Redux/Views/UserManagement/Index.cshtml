@model List<CIS420Redux.Models.ViewModels.SelectUserRolesViewModel>

@{
    ViewBag.Title = "Manage Users";
}

<h2>User Roles</h2>

<div class="col-md-12 table-title">
    <table class="table table-striped table table-condensed">
        <thead>
            <tr>
                <th class="col-md-4" style="font-size: 18px"><b>User Name</b></th>
                <th class="col-md-4" style="font-size: 18px"><b>Roles</b></th>
            </tr>
        </thead>
        <tbody>
            @{ var list = Model.ToList();
                for (int i = 0; i < list.Count; i++)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => list[i].UserName)</td>
                        <td>
                            @foreach (var role in list[i].Roles)
                            {
                                <p>@role.RoleName</p>

                            }
                        </td>

                        <td>
                            <a href="@Url.Action("Edit", "UserManagement",new { @id = Model.ToList()[i].Id})">Edit</a>
                          </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
