@model IEnumerable<CIS420Redux.Models.Todo>

<table class="table" style="color: #000000">
    <tr>        
        <th  style="border-style: solid; border-width: 2px; text-align:center; border-color: #000000">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th  style="border-style: solid; border-width: 2px; text-align:center; border-color: #000000">
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th  style="border-style: solid; border-width: 2px; text-align:center; border-color: #000000">
            @Html.DisplayNameFor(model => model.EndDate)
        </th>        
        <th style="border-style: solid; border-width: 2px; text-align:center; border-color: #000000"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>            
            <td style="border-style: solid; border-width: 2px; text-align:center">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td style="border-style: solid; border-width: 2px; text-align:center">
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td style="border-style: solid; border-width: 2px; text-align:center">
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>            
            <td style="border-style: solid; border-width: 2px; text-align:center">
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>
