@model  CIS420Redux.Models.ViewModels.Advisor.StudentRecordViewModel
@{
    ViewBag.Title = "StudentRecords";
}
<div class="panel panel-primary" style="margin-top:30px;">
    <div class="panel-heading" style="background-color: red;">
        <h3>Student Records</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="panel-primary">
                    <div class="panel-heading"style="background-color: red;">
                        <h4>Student Records</h4>
                    </div>
                    <div class="panel-body">
                        @Html.Partial("StudentRecordsPartial",Model.StudentRecordsList)
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-danger btn-lg" onclick="window.location.href = '@Url.Action("StudentRecords", "Advisor")'">Post Grades</button>
            <div class="col-md-4">

                <div class="panel-primary">
                    <div class="panel-heading" style="background-color: red;">
                        <h4>To-Dos </h4>
                    </div>
                    <div class="panel-body">
                        @Html.Partial("AdvisorTodosPartial", Model.AdvisorTodosList)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>