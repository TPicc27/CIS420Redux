@model CIS420Redux.Models.ViewModels.Advisor.AdvisorIndexViewModel
@{
    ViewBag.Title = "Dashboard";
}

<div class="panel panel-primary" style="margin-top:30px;">
    <div class="panel-heading" style="background-color: #AD0000;">
        <h3>Advisor Home</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="panel-primary" style="float: left;">
                    <div class="panel-heading" style="background-color: #AD0000;">
                        <h3 style="text-align: center">Alerts</h3>

                    </div>

                        @Html.Partial("NCStudentsPartial", Model.NCStudentsList) 
                      
                        @Html.Partial("AlertsPartial", Model.AlertList)              

                </div>
            </div>

            <div class="col-md-6">
                <div class="panel-primary">
                    <div class="panel-heading" style="background-color: #AD0000;">
                        <h3 style="text-align: center">To-Dos</h3>
                    </div>
                    
                        @Html.Partial("AdvisorTodosPartial", Model.AdvisorTodosList)
                  
                </div>
            </div>
        </div>
    </div>
</div>
