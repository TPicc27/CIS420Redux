@using CIS420Redux.Models.ViewModels.Advisor
@model IEnumerable<AdvisorCCIndexViewModel>
@{
    ViewBag.Title = "CCDocuments";
}

<div class="panel" style="margin-top: 15px;">
    <div class="panel-heading" style="background-color: rgb(227, 27, 35); text-align: center;">
        <h3>Manage Clinical Compliance</h3>
    </div>
</div>

<table class="table table-bordered table-responsive table-hover">
    <tr style="color: black;">
        <th>
            Student Number
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Complaince Name
        </th>
        <th>
            Expiration Date
        </th>
        <th>
            Is Expired
        </th>
        <th>
            Is Compliant
        </th>
        <th>
            Document
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr style="color: black;">
            <td>
                @Html.DisplayFor(modelItem => item.StudentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsExpired)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplaint)
            </td>
            <td>
                @Html.ActionLink("Download Document", "GetDocument", "Home", new { documentId = item.DocumentId }, new { @class = "btn btn-primary" })
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit","ClincalCompliance", new { id = item.ID },false)
                </td>
        </tr>
    }

</table>
