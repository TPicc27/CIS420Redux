@model CIS420Redux.Models.ViewModels.HomeIndexViewModel
@{
    ViewBag.Title = "Dashboard";
}


<div class="panel" style="margin-top: 15px;">
    <div class="panel-heading" style="background-color: rgb(227, 27, 35)">
        <h3 style="text-align:center">Student Home</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="panel-primary">
                    <div class="panel-heading" style="background-color: rgb(227, 27, 35)">
                        <h4>Student Information</h4>
                    </div>
                    <div class="panel-body" style="color: #000000">
                        @Html.Partial("_StudentsPartial", Model.StudentsList)
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="panel-primary">
                    <div class="panel-heading" style="background-color: rgb(227, 27, 35)">
                        <h4>To-Dos </h4>
                    </div>
                    <div class="panel-body" style="color: #000000">
                        @Html.Partial("_TodosPartial", Model.TodosList)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<h4 style="text-align: left; color: #000000; font-weight: bold; text-align: center">  Links:</h4>
<div class="row; text-center">
    <div class="col-md-3">
        <label style="text-align: left; color: black">  Upper Division Application:</label>
        @Html.ActionLink("LinkToUpperDivisionApplication", "Create", "UdApplication")
    </div>
    <div class="col-md-3">
        <label style="text-align: left; color: black">  BSN Application:</label>
        <a href="https://louisville.edu/nursing/bsn">LinkToBSNApplication</a>
    </div>
    <div class="col-md-3">
        <label style="text-align: left; color: black">Link To Current Students</label>
        <a href="https://louisville.edu/nursing/current-students">LinkToCurrentStudentsPage</a>
    </div>
    <div class="col-md-3">
        <label style="text-align: left; color: black">Application for Graduate Admission</label>
        <a href="https://louisville.edu/nursing/current-students">LinkToGraduateAdmission</a>
    </div>
</div>


