@using CIS420Redux.Models.ViewModels
@model IEnumerable<StudentCCIndexViewModel>
@{
    ViewBag.Title = "GetStudentClinicalCompliances";
}

<div class="panel panel-primary" style="margin-top: 15px;">
    <div class="panel-heading" style="background-color: rgb(227, 27, 35); text-align: center;">
        <h3>Clinical Compliance</h3>
    </div>
</div>

<p>
    <button type="button" class="btn btn-danger btn-lg" onclick="window.location.href = '@Url.Action("DocumentManagement","Home")'">Upload Document</button>
    <button type="button" class="btn btn-danger btn-lg" onclick="window.location.href = '@Url.Action("ViewDocument","Home")'">View Documents</button>
</p>
<table class="table">
    <tr>
        <th>
            Student Number
        </th>
        <th>
            Complaince Name
        </th>
        <th>
            Expiration Date
        </th>
        <th>
            Is Compliant
        </th>
        <th>
            Document
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplaint)
            </td>
            <td>
                @Html.ActionLink("Download Document", "GetDocument", "Home", new { documentId = item.DocumentId }, new { @class = "btn btn-primary" })
            </td>
            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>*@
        </tr>
    }

</table>
