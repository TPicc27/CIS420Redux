@model CIS420Redux.Models.Student

@{
    ViewBag.Title = "Edit";
}
<div class="panel" style="margin-top: 15px;">
    <div class="panel-heading" style="background-color: #AD0000; text-align: center;">
        <h3>Edit Student</h3>
    </div>
</div>
<p>
