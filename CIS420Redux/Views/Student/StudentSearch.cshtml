@model IEnumerable<CIS420Redux.Models.Student>

@{
    ViewBag.Title = "StudentSearch";
}

<div class="panel" style="margin-top:15px; border-color: none;">
    <div class="panel-heading" style="background-color: rgb(227, 27, 35); text-align: center">
        <h3>Students</h3>
    </div>

    <p>
        <button type="button" class="btn btn-danger btn-lg" onclick="window.location.href = '@Url.Action("Create","Student")'">Create Student</button>
    </p>
    <table class="table" style="color: #000000">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Program.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Standing)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Program.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GPA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Standing)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                        </td>*@
            </tr>
        }

    </table>
</div>