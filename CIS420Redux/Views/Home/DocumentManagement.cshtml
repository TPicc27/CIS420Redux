@using CIS420Redux.Controllers
@{
    ViewBag.Title = "DocumentManagement";
}

<h2>Document Management</h2>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Upload Documents</h4>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm("UploadDocument", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div style="color: black;">
                <label for="studentNumber">Student Number:</label>
                <input type="text" name="studentNumber" id="studentNumber" />
            </div>
            <br />
            <div style="color: black;">
                <label for="expirationDate">Expiration Date:</label>
                <input type="text" name="expirationDate" id="expirationDate" />
            </div>
            <br />
            <div style="color: black;">
                <label for="type">Type:</label>
                <input type="text" name="type" id="type" />
            </div>
            <br />
            <div style="color: black;">
                <label for="file">Upload Form</label>
                <input type="file" name="file" id="file" />
            </div>
            <br />
            <input type="submit" />
        }

    </div>
</div>

