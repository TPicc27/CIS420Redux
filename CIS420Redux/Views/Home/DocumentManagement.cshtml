@using CIS420Redux.Controllers
@{
    ViewBag.Title = "DocumentManagement";
}

<div class="panel" style="margin-top: 15px;">
    <div class="panel-heading" style="background-color: rgb(227, 27, 35); text-align: center;">
        <h3>Upload Document</h3>
    </div>
</div>
<div class="container">
    <div class="wrapper">
        @*<form action="" method="post" name="Login_Form" class="form-signin">*@
            <div class="form-signin">
            <h3 class="form-signin-heading" style="color: rgb(227, 27, 35)">Upload</h3>
            <hr class="colorgraph" style="background: rgb(227, 27, 35)" )"><br>
            @using (Html.BeginForm("UploadDocument", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div style="color: black;">
                  
                    <input placeholder="Student Number"class="form-control"type="text" name="studentNumber" id="studentNumber" />
                </div>
                <br />
                <div style="color: black;">

                    <input placeholder="Expiration Date (mm/dd/yyyy)"class="form-control"type="text" name="expirationDate" id="expirationDate" />
                </div>
                <br />
                <div style="color: black;">
                  <select name="type" id="type" class="form-control">
                      <option value="CPR">CPR</option>
                      <option value="HIPAA">HIPAA</option>
                      <option value="Bloobourne Path.">Bloobourne Path.</option>
                      <option value="Liability Insurance">Liability Insurance</option>
                      <option value="Immunizations">Immunizations</option>
                      <option value="Drug Screening">Drug Screening</option>
                      <option value="CNA">CNA</option>
                  </select>
                </div>
                <br />
                <div style="color: black;">
                    <label for="file">Upload Form</label>
                    <input type="file" name="file" id="file" />
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-danger" />
                    </div>
                </div>
            }
                </div>

    </div>
</div>
