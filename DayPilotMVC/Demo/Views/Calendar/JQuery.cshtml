
@using DayPilot.Web.Mvc.Enums.Calendar
@using DayPilot.Web.Mvc.Events.Calendar

@section TitleContent {

	AJAX Drag&amp;Drop Event Calendar

}



<script type="text/javascript">

    var dpc;
    
	function createEvent(start, end) {
	    var name = prompt("New Event Name:", "New Event");
	    if (!name) { return; }
	    dpc.timeRangeSelectedCallBack(start, end, null, { name: name });
	    dpc.clearSelection();
	}

</script>

    <div class="note">
    <b>Note:</b> The Calendar can be initialized using a jQuery plugin.
    </div>

<div id="dpc"></div>

<script type="text/javascript">
$(document).ready(function() {
    dpc = $("#dpc").daypilotCalendar({
        backendUrl: '@Url.Content("~/Calendar/Backend")',
        viewType: "Week",
        timeRangeSelectedHandling:  "JavaScript",
        onTimeRangeSelected: function(start, end) { createEvent(start, end); },
        eventMoveHandling: "CallBack",
        eventResizeHandling: "CallBack"
    });
});
</script>

