
@using DayPilot.Web.Mvc.Enums.Calendar
@using DayPilot.Web.Mvc.Events.Calendar

@section TitleContent {

	AJAX Drag&amp;Drop Day View Calendar

}



<script type="text/javascript">

	function createEvent(start, end) {
	    var name = prompt("New Event Name:", "New Event");
	    if (!name) { return; }
	    dpc.timeRangeSelectedCallBack(start, end, null, { name: name });
	    dpc.clearSelection();
	}

</script>

    <p>
        @(Html.DayPilotCalendar("dpc", new DayPilotCalendarConfig { 
                BackendUrl = Url.Content("~/Calendar/Backend"),
                ViewType = DayPilot.Web.Mvc.Enums.Calendar.ViewType.Day,
                
                TimeRangeSelectedHandling = TimeRangeSelectedHandlingType.JavaScript,
                TimeRangeSelectedJavaScript = "createEvent(start, end)",
                EventMoveHandling = EventMoveHandlingType.CallBack,
                EventResizeHandling = EventResizeHandlingType.CallBack,
                LoadingLabelText="<img src='" + Url.Content("~/Media/linked/ajax-loader-round.gif") + "' />",
                LoadingLabelBackColor="",

        }))
    </p>



