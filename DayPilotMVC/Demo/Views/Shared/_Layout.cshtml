@using App_Code.Helpers
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title @RenderSection("TitleContent", required: false) | DayPilot Lite for ASP.NET MVC Demo</title>


    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Media/layout.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Media/elements.css")?v=@Html.GetBuild()" />    
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.8.1.min.js")"></script>

    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/calendar_green.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/calendar_white.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/calendar_transparent.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/calendar_g.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/calendar_blue.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/calendar_traditional.css")?v=@Html.GetBuild()" />    

    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/month_transparent.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/month_green.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/month_white.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/month_g.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/month_blue.css")?v=@Html.GetBuild()" />    
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Themes/month_traditional.css")?v=@Html.GetBuild()" />    

    <script type="text/javascript" src="@Url.Content("~/Scripts/DayPilot/daypilot-all.min.js")?v=@Html.GetBuild()"></script>
    @RenderSection("HeadContent", required: false)
</head>

<body>
        <div id="header">
			<div class="bg-help">
				<div class="inBox">
					<h1 id="logo"><a href='http://mvc.daypilot.org/'>DayPilot Lite for ASP.NET MVC</a> &raquo; <a href='@Url.Content("~/")'>Demo</a></h1>
					<p id="claim">AJAX Calendar/Scheduling Controls for ASP.NET MVC [Open-Source].</p>
					<hr class="hidden" />
				</div>
			</div>
		</div>

    <div id="download">
            <div style="float:left; width: 120px;"><a href="@Html.GetDownloadUrl()" class="css3button">Download</a></div>
            <div style="margin-left: 130px;">
                <div>Download the source code (370 kB). Compare features with <a href="http://mvc.daypilot.org/demo/">DayPilot Pro</a>.</div>
                <div><a href="@Html.GetDownloadUrl()">@Html.GetDownloadName()</a></div>
            </div>
    </div>

    <div id="main">
        <div id="tabs">
            @Html.Tabs()
        </div>
        
        <div id="container" >
	        <div id="left" class="menu">
		    	            <div>
		    	                @Html.Menu()
	    		            </div>
            </div>
	        <div id="content">
	            <div>
                    @RenderBody()
                </div>
	        </div>
        </div>
    </div>

</body>
</html>
